<%- include("partials/header.ejs") %>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Todo List âœ…</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="#">Work List</a>
          </li>
          <li class="nav-item">
            <button class="nav-link active" href="#">All List</button>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- Todo List Section-->
  <div class="container-fluid  p-5 justify-content-center gradient-Background ">
    <div class="col-8 justify-content-start pb-3">
      <% if(!(locals.Todo)||Todo.length===0)  {%>
      <h1>Start Typing Something To do!</h1>
      <% } else { %>
      <ul class="list-group">
        <% Todo.forEach((element)=> {%>
        <li class="list-group-item col-9 col-6 col-3"><input class="form-check-input me-mt-2" type="checkbox" value=""
            id="firstCheckbox">
          <label class="form-check-label" for="firstCheckbox"><%=element %></label>
        </li>


        <% })}%>
      </ul>
    </div>
    <div class="col-4">
      <form action="submit" method="post">
        <input type="text" name="Todo" placeholder="Type Here!" autocomplete="off" autofocus data-bs-theme="dark"
          class="inputText form-control mb-3">
        <input type="submit" value="Add" class="btn btn-outline-light  md-mt-4 pr-3 ">
      </form>
      <form action="delete" method="post">
        <input class="btn btn-outline-danger md-mt-4 pr-3 " type="submit" name="delete" value="Delete"></form>
    </div>
  </div>
  <%- include("partials/footer.ejs") %>

</body>